# MongoDB - Local Development
MONGO_USERNAME=jsr_user
MONGO_PASSWORD=jsr_password
MONGO_DATABASE=jsr
MONGODB_URI=mongodb://jsr_user:jsr_password@mongodb:27017/jsr?authSource=admin

# MongoDB Atlas - Production
MONGODB_ATLAS_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT
JWT_SECRET=your_jwt_secret_key_should_be_very_long_and_secure

# Supabase Auth
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Production Domain (for SSL certificates)
DOMAIN_NAME=yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Node Environment
NODE_ENV=development 