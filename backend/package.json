{
  "name": "@jsr/backend",
  "version": "0.1.0",
  "description": "Backend API for JSR applications",
  "private": true,
  "main": "src/app.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "start": "node dist/app.js",
    "db:seed": "ts-node src/test-utils/db-cli.ts seed",
    "db:clear": "ts-node src/test-utils/db-cli.ts clear",
    "db:drop": "ts-node src/test-utils/db-cli.ts drop"
  },
  "dependencies": {
    "@jsr/shared": "workspace:*",
    "bcryptjs": "^2.4.3",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^8.54.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  }
}